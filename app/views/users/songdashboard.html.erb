<%= provide(:title, 'Dashboard') %>
<div class="row">
	<div class="span3">
		<div class="well" style="padding:8px 0;">
			<ul class="nav nav-list">
			  <li class="nav-header">
			    Albums
			  </li>
			  <li><%= link_to "Create New Album", new_user_album_path(@user) %></li>
			  <li><%= link_to "My Albums", user_albums_path(@user) %></li>

			</ul>
		</div>
	</div>
	<div class="span9">
		<h2 class="hb">My Albums</h2>
		<ul class="thumbnails">
	        <% @albums.each do |album| %>
	            <li class="span3">
	            	<div class="thumbnail">
	                    <img src="http://placehold.it/600x600" alt="">
	                    <h5><%= link_to album.title, album %></h5>
	                    <p><%= link_to "<i class='icon-play'></i> Songs".html_safe, new_album_song_path(album)  %>></p>
	                  </div>
	            </li>
	        <% end %>
    	</ul>

	</div>
</div>