<%= provide(:title, 'Signup') %>
<div class="row">
  <div class="span12">
    <div class="well">
      <h2 class="hb">Sign Up</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :username, :hint => "This is also your your url, http://username.mozapolis.net/" %>
          <%= f.input :email, :hint => "Must be a valid email address." %>
          <%= f.input :password, :hint => "Min 6 chars, no special characters please." %>
          <%= f.input :password_confirmation %>

          <div class="form-actions"><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
      <% end %>

      <h6 class="hb">Helpful Links</h6>
      <%= render :partial => "users/links" %>
    </div>
  </div>
</div>
