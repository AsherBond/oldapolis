<%= provide(:title, 'Reset Password') %>
<div class="row">
  <div class="span12">
    <div class="well">
      <h2 class="hb">Forgot your Password?</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post, :class => 'form-horizontal'}) do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :email, :hint => "We'll send you an email right away with instructions on how to reset your password!" %>

          <div class="form-actions"><%= f.submit "Send me reset password instructions", :class => "btn btn-danger" %></div>
      <% end %>

      <h6 class="hb">Helpful Links</h6>
      <%= render :partial => "users/links" %>
    </div>
  </div>
</div>