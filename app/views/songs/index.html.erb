<%= provide(:title, 'New Song') %>
<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li>
        <%= link_to "Album Dashboard", album_dashboard_url %>
        <span class="divider">/</span>
      </li>

      <li class="active"><%= @album.title %></li>
    </ul>
    
    <div class="btn-group pull-right">
      <%= link_to "<i class='icon-upload'></i> Add Song".html_safe, new_user_album_song_path(@album.user_id, @album), :class => "btn btn-success" %>
      <%= link_to "<i class='icon-edit'></i> Edit Album".html_safe, edit_user_album_path(@album.user_id, @album), :class => "btn" %>
      <%= link_to "<i class='icon-remove'></i> Delete Album".html_safe, user_album_url(@album.user_id, @album), :class => "btn btn-danger", :confirm => "Are you sure you want to delete this album?", :method => :delete %>
      <%= link_to "Back <i class='icon-arrow-left'></i>".html_safe, :back, :class => "btn btn-inverse" %>
    </div>
    <h2 class="hb">Managing album <%= @album.title %></h2>

    <%= render 'shared/player' %>
  </div>
</div>
<div class="tabbable"> 
  <div class="row">
    <div class="span12">
      <div class="btn-group pull-right nav nav-tabs">
        <%= link_to "<i class='icon-list'></i>".html_safe, "#list", :class => "btn", :rel => "tooltip", :title => "List View", :data => { :toggle => "tab" } %><%= link_to "<i class='icon-th-large'></i>".html_safe, "#grid", :class => "btn", :rel => "tooltip", :title => "Grid View", :data => { :toggle => "tab"} %>
      </div>
      <h2 class="hb">Songs</h2>
    </div>
  </div>
  <div class="row">
  <div class="tab-content">
    <div class="tab-pane" id="grid">
      <div class="span12">

        <ul class="thumbnails">
          <% @songs.each do |song| %>
              <li class="span3">
                <div class="thumbnail">
                  <%= image_tag song.artwork.url(:medium) %>
                  <h5><%= link_to song.title, "#" %></h5>

                  <div class="btn-group">
                    <%= link_to "Edit", edit_user_album_song_path(@album.user_id, @album, song), :class => "btn btn-mini btn-inverse" %>
                    <%= link_to "Remove".html_safe, user_album_song_url(@album.user_id,@album,song), :class => "btn btn-danger btn-mini", :confirm => "Are you sure you want to delete this song?", :method => :delete %>
                  </div>
                </div>
              </li>
          <% end %>
        </ul>

      </div>
    </div>
    <div class="tab-pane active" id="list">
      <div class="span8">

        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th width="70%">Song Title</th>
            <th width="20%">Rating</th>
            <th width="10%">Plays</th>
          </tr>
          </thead>
          <tbody>
            <% @songs.each do |song| %>
              <tr>
                <td>
                  <%= link_to song.title, "#" %>
                  <div class="btn-group pull-right">
                    <%= link_to "Edit", edit_user_album_song_path(@album.user_id, @album, song), :class => "btn btn-mini btn-inverse" %>
                    <%= link_to "Comments".html_safe, "#", :class => "btn btn-mini" %>
                    <%= link_to "Remove".html_safe, user_album_song_url(@album.user_id,@album,song), :class => "btn btn-danger btn-mini", :confirm => "Are you sure you want to delete this song?", :method => :delete %>
                  </div>
                </td>
                <td>
                  <i class="icon-star"></i>
                  <i class="icon-star"></i>
                  <i class="icon-star"></i>
                  <i class="icon-star"></i>
                  <i class="icon-star"></i>
                </td>
                <td>3,245</td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
      <div class="span4">
        <ul class="thumbnails">
          <li class="span4">
            <div class="thumbnail">
              <%= image_tag @album.artwork.url(:medium) %>
              <h2><%= @artist.artist_name %></h2>

              <h3>"<%= @album.title %>"</h3>
              <h4><%= @artist.city %>, <%= @artist.state %></h4>
              <hr>
              <p>
                <%= link_to "<i class='icon-upload'></i> Add Song".html_safe, new_user_album_song_path(@album.user_id, @album), :class => "btn btn-success" %>
                <%= link_to "<i class='icon-edit'></i> Edit Album".html_safe, edit_user_album_path(@album.user_id, @album), :class => "btn" %>
              </p>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div><!-- /tab-content -->
  </div><!-- /row -->

</div><!-- /tabbable -->



