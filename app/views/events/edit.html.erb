<%= provide(:title, 'Edit Event') %>
<div class="row">
  <div class="span6 offset3">
    <ul class="breadcrumb">
      <li>
        <%= link_to "Events Dashboard", events_dashboard_url %>
        <span class="divider">/</span>
      </li>


      <li class="active">Edit Event <%= @event.title %></li>
    </ul>
    <div class="well">
      <%= link_to "Remove".html_safe, user_event_url(@user, @event), :class => "btn btn-danger btn-mini pull-right", :confirm => "Are you sure you want to delete this event?", :method => :delete %>

      <%= simple_form_for [@user, @event], :html => {:class => 'form-vertical'} do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :title, :hint => "The title of the event." %>
          <%= f.input :location, :hint => "Tell us where to camp out..." %>
          <%= f.input :info, :hint => "A breif discription.", :input_html => {:class => "span4", :rows => 4} %>
          <% if @event.flyer.file? %>
            <div class="pull-right">
              <h6>Current Image</h6>
              <%= image_tag @event.flyer.url(:avatar) %>
            </div>
          <% end %>
          <%= f.input :flyer %>
          <hr>
          <%= f.input :start, :hint => "Start time.", :input_html => {:class => "span1"} %>
          <%= f.input :end, :hint => "End time", :input_html => {:class => "span1"} %>
          <hr>
          <%= f.input :ticket_link, :hint => "URLs will be checked for cleaness." %>
          <%= f.input :disclaimer, :hint => "If any...", :input_html => {:class => "span4", :rows => 4} %>

          <div class="form-actions">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
            <%= link_to "Back <i class='icon-arrow-left'></i>".html_safe, :back, :class => "btn btn-inverse" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
