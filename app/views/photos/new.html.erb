<%= provide(:title, 'New Photo') %>
<div class="row">
  <div class="span6 offset3">
    <ul class="breadcrumb">
      <li>
        <%= link_to "Gallery Dashboard", gallery_dashboard_url %>
        <span class="divider">/</span>
      </li>


      <li class="active">New Photo </li>
    </ul>
    <div class="well">

      <%= simple_form_for [@user, @photo], :html => {:class => 'form-vertical'} do |f| %>
          <%= devise_error_messages! %>

          <%= f.input :caption %>
          <%= f.input :image %>



          <div class="form-actions">
            <%= f.submit "Submit", :class => "btn btn-primary" %>
            <%= link_to "Back <i class='icon-arrow-left'></i>".html_safe, :back, :class => "btn btn-inverse" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
