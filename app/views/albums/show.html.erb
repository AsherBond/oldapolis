<%= provide(:title, 'Listening to #{artist.artist_name} | #{album.title}') %>
<div class="row">
  <div class="span12">
    <ul class="breadcrumb">
      <li>
        <%= link_to @artist.artist_name, @artist %>
        <span class="divider">/</span>
      </li>

      <li class="active">Listening to <%= @album.title %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span5">
    <ul class="thumbnails">
      <li class="span5">
        <div class="thumbnail">
          <%= image_tag @album.artwork.url(:medium) %>
          <h2><%= @artist.artist_name %></h2>

          <h3>"<%= @album.title %>"</h3>
          <h4><%= @artist.city %>, <%= @artist.state %></h4>

        </div>
      </li>
    </ul>
  </div>
  <div class="span7">
    <h1 class="hb">Album: <%= @album.title %></h1>

    <div class="well" style="padding:5px">
      <div class="btn-group">
        <button
        class="btn btn-danger"><i
        class="icon-play"></i></button>
        <button

        class="btn btn-danger"><i
        class="icon-pause"></i></button>
        <button

        class="btn btn-danger"><i
        class="icon-stop"></i></button>
        <button

        class="btn btn-warning"><i
        class="icon-volume-down"></i></button>
        <button

        class="btn btn-warning"><i
        class="icon-volume-up"></i></button>
        <button

        class="btn btn-inverse"><i
        class="icon-step-backward"></i></button>
        <button

        class="btn btn-inverse"><i
        class="icon-step-forward"></i></button>
        <button

        class="btn btn-inverse disabled"><i
        class="icon-headphones"></i> Now Playing: <strong>Roam</strong></button>
      </div>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
      <tr>
        <th width="70%">Song Title</th>
        <th width="20%">Rating</th>
        <th width="10%">Plays</th>
      </tr>
      </thead>
      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td>
              <%= link_to song.title, '#' %> 
              <div class="btn-group pull-right">
                <%= link_to "View Comments (34)", root_path, :class => "btn btn-mini" %>
              </div>
            </td>
            <td>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
              <i class="icon-star"></i>
            </td>
            <td>3,245</td>
          </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>